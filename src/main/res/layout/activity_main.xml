<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.myapplication.WheelView
        wheel:select_color="@color/wheel_select_color"
        wheel:select_size="@dimen/wheel_select_size"
        wheel:unselect_size="@dimen/wheel_unselect_size"
        wheel:itemview_size="@dimen/wheel_item_height"
        wheel:unselect_color="@color/wheel_unselect_color"
        android:id="@+id/wheel_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30分钟"/>
</LinearLayout>